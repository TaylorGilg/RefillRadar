<EditPrescriptionScreen>:
    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: 1, 1, 1, 1  # white background

        # 🌟 Custom Header
        MDBoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: "50dp"
            padding: "8dp", "4dp"
            spacing: "4dp"
            md_bg_color: 1, 1, 1, 1

            MDIconButton:
                icon: "arrow-left"
                icon_color: 0, 0, 0, 1
                on_release: root.manager.current = "prescription"
                size_hint_x: None
                width: "40dp"

            MDLabel:
                text: "[b][color=2a7bf6]Edit Prescription[/color][/b]"
                markup: True
                font_size: "40sp"
                bold: True
                theme_text_color: "Custom"
                text_color: 0.2, 0.4, 1, 1

        MDDivider:
            height: "1dp"
            md_bg_color: 0.8, 0.8, 0.8, 1

        # Scrollable Content
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True

            MDBoxLayout:
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                spacing: "8dp"
                padding: "8dp"
                pos_hint: {"center_x": 0.5}

                # ✨ Category section
                MDBoxLayout:
                    orientation: "vertical"
                    size_hint_y: None
                    height: self.minimum_height
                    padding: "8dp", "12dp"
                    spacing: "6dp"
                    md_bg_color: 1, 1, 1, 1

                    MDLabel:
                        text: "Category"
                        bold: True
                        font_size: "18sp"
                        theme_text_color: "Primary"
                        size_hint_y: None
                        height: self.texture_size[1]
                        padding: "4dp", "0dp"

                    # 💊 Scrollable Horizontal Buttons
                    ScrollView:
                        do_scroll_x: True
                        do_scroll_y: False
                        size_hint_y: None
                        height: "55dp"

                        MDBoxLayout:
                            id: medication_buttons
                            orientation: "horizontal"
                            spacing: "10dp"
                            padding: "4dp"
                            size_hint_x: None
                            width: self.minimum_width
                            height: self.minimum_height

                            MDIconButton:
                                icon_value: 1
                                icon: "pill"
                                style: "outlined"
                                theme_icon_color: "Custom"
                                icon_color: 0, 0, 0.5, 1
                                user_font_size: "32sp"
                                on_release: app.select_medication(self)

                            MDIconButton:
                                icon_value: 2
                                style: "outlined"
                                icon: "minus-circle"
                                theme_icon_color: "Custom"
                                icon_color: 0, 0, 0.5, 1
                                user_font_size: "32sp"
                                on_release: root.select_medication(self)

                            MDIconButton:
                                icon_value: 3
                                style: "outlined"
                                icon: "bottle-tonic"
                                theme_icon_color: "Custom"
                                icon_color: 0, 0, 0.5, 1
                                user_font_size: "32sp"
                                on_release: root.select_medication(self)

                            MDIconButton:
                                icon_value: 4
                                style: "outlined"
                                icon: "medication"
                                theme_icon_color: "Custom"
                                icon_color: 0, 0, 0.5, 1
                                user_font_size: "32sp"
                                on_release: root.select_medication(self)

                            MDIconButton:
                                icon_value: 5
                                style: "outlined"
                                icon: "bottle-tonic-plus-outline"
                                theme_icon_color: "Custom"
                                icon_color: 0, 0, 0.5, 1
                                user_font_size: "32sp"
                                on_release: root.select_medication(self)

                            MDIconButton:
                                icon_value: 6
                                style: "outlined"
                                icon: "needle"
                                theme_icon_color: "Custom"
                                icon_color: 0, 0, 0.5, 1
                                user_font_size: "32sp"
                                on_release: root.select_medication(self)

                    MDDivider:
                        height: "1dp"
                        size_hint_x: 1
                        md_bg_color: 0.8, 0.8, 0.8, 1

                    # ✨ Color label
                    MDLabel:
                        text: "Color"
                        bold: True
                        font_size: "18sp"
                        theme_text_color: "Primary"
                        size_hint_y: None
                        height: self.texture_size[1]
                        padding: "4dp", "0dp"

                    # 🎨 Scrollable Color Buttons
                    ScrollView:
                        do_scroll_x: True
                        do_scroll_y: False
                        size_hint_y: None
                        height: "45dp"

                        MDBoxLayout:
                            id: color_buttons
                            orientation: "horizontal"
                            spacing: "10dp"
                            padding: "4dp"
                            size_hint_x: None
                            width: self.minimum_width
                            height: self.minimum_height

                            MDFloatLayout:
                                size_hint: None, None
                                size: "32dp", "32dp"
                                md_bg_color: 1, 0, 0, 1        # RED
                                radius: [50]  # Ensures full circular button

                                MDIconButton:
                                    color_value: 1
                                    style: "outlined"
                                    icon: "checkbox-blank-circle"  # keep the button clickable
                                    theme_icon_color: "Custom"
                                    icon_color: 0, 0, 0, 0  # Fully transparent icon
                                    size_hint: None, None
                                    size: "32dp", "32dp"
                                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                    on_release: app.select_color(self)

                            MDFloatLayout:
                                size_hint: None, None
                                size: "32dp", "32dp"
                                md_bg_color: 0, 0.5, 0.5, 1     # TEAL
                                radius: [50]

                                MDIconButton:
                                    color_value: 2
                                    style: "outlined"
                                    icon: "checkbox-blank-circle"
                                    theme_icon_color: "Custom"
                                    icon_color: 0, 0, 0, 0
                                    size_hint: None, None
                                    size: "32dp", "32dp"
                                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                    on_release: app.select_color(self)

                            MDFloatLayout:
                                size_hint: None, None
                                size: "32dp", "32dp"
                                md_bg_color: 0, 0, 1, 1         # DARK BLUE
                                radius: [50]

                                MDIconButton:
                                    color_value: 3
                                    style: "outlined"
                                    icon: "checkbox-blank-circle"
                                    theme_icon_color: "Custom"
                                    icon_color: 0, 0, 0, 0
                                    size_hint: None, None
                                    size: "32dp", "32dp"
                                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                    on_release: app.select_color(self)          
                            
                            MDFloatLayout:
                                size_hint: None, None
                                size: "32dp", "32dp"
                                md_bg_color: 1, 1, 0, 1         # YELLOW
                                radius: [50]

                                MDIconButton:
                                    color_value: 4
                                    style: "outlined"
                                    icon: "checkbox-blank-circle"
                                    theme_icon_color: "Custom"
                                    icon_color: 0, 0, 0, 0
                                    size_hint: None, None
                                    size: "32dp", "32dp"
                                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                    on_release: app.select_color(self)

                            MDFloatLayout:
                                size_hint: None, None
                                size: "32dp", "32dp"
                                md_bg_color: 1, 0.5, 0, 1       # ORANGE
                                radius: [50]

                                MDIconButton:
                                    color_value: 5
                                    style: "outlined"
                                    icon: "checkbox-blank-circle"
                                    theme_icon_color: "Custom"
                                    icon_color: 0, 0, 0, 0
                                    size_hint: None, None
                                    size: "32dp", "32dp"
                                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                    on_release: app.select_color(self)

                            MDFloatLayout:
                                size_hint: None, None
                                size: "32dp", "32dp"
                                md_bg_color: 1, 0.08, 0.58, 1    # PINK
                                radius: [50]

                                MDIconButton:
                                    color_value: 6
                                    style: "outlined"
                                    icon: "checkbox-blank-circle"
                                    theme_icon_color: "Custom"
                                    icon_color: 0, 0, 0, 0
                                    size_hint: None, None
                                    size: "32dp", "32dp"
                                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                    on_release: app.select_color(self)

                            MDFloatLayout:
                                size_hint: None, None
                                size: "32dp", "32dp"
                                md_bg_color: 0.73, 0.33, 0.83, 1   # LIGHT PURPLE
                                radius: [50]

                                MDIconButton:
                                    color_value: 7
                                    style: "outlined"
                                    icon: "checkbox-blank-circle"
                                    theme_icon_color: "Custom"
                                    icon_color: 0, 0, 0, 0
                                    size_hint: None, None
                                    size: "32dp", "32dp"
                                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                    on_release: app.select_color(self) 

                            MDFloatLayout:
                                size_hint: None, None
                                size: "32dp", "32dp"
                                md_bg_color: 0.53, 0.81, 0.98, 1    # SKY BLUE
                                radius: [50]

                                MDIconButton:
                                    color_value: 8
                                    style: "outlined"
                                    icon: "checkbox-blank-circle"
                                    theme_icon_color: "Custom"
                                    icon_color: 0, 0, 0, 0
                                    size_hint: None, None
                                    size: "32dp", "32dp"
                                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                    on_release: app.select_color(self) 

                            MDFloatLayout:
                                size_hint: None, None
                                size: "32dp", "32dp"
                                md_bg_color: 0.13, 0.55, 0.13, 1     # FOREST GREEN
                                radius: [50]

                                MDIconButton:
                                    color_value: 9
                                    style: "outlined"
                                    icon: "checkbox-blank-circle"
                                    theme_icon_color: "Custom"
                                    icon_color: 0, 0, 0, 0
                                    size_hint: None, None
                                    size: "32dp", "32dp"
                                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                                    on_release: app.select_color(self) 


                MDDivider:
                    height: "1dp"
                    size_hint_x: 1
                    md_bg_color: 0.8, 0.8, 0.8, 1

                # 💊 Medicine Name Field
                MDBoxLayout:
                    orientation: "vertical"
                    size_hint_y: None
                    height: self.minimum_height
                    padding: "8dp", "4dp"
                    spacing: "4dp"

                    MDLabel:
                        text: "Medication Name"
                        bold: True
                        font_size: "18sp"
                        theme_text_color: "Primary"
                        size_hint_y: None
                        height: self.texture_size[1]
                        halign: "left"

                    MDTextField:
                        id: med_name_input
                        mode: "outlined"
                        hint_text: "Type or select a medication"
                        size_hint_y: None
                        height: "40dp"

                # 🌟 Dosage Section
                MDBoxLayout:
                    orientation: "vertical"
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: "4dp"
                    padding: "8dp", "4dp"

                    MDBoxLayout: 
                        orientation: "horizontal" 
                        spacing: "6dp" 
                        size_hint_y: None 
                        height: "30dp"  # adjust if needed 
    
                        MDIconButton: 
                            icon: "information-outline" 
                            theme_icon_color: "Secondary" 
                            size_hint: None, None 
                            size: "24dp", "24dp" 
                            on_release: app.show_tooltip("Dosage", "Set the max dose amount per regular interval, ex. 1 tablet every 8 hours.")

                        MDLabel:
                            text: "Dosage"
                            font_size: "18sp"
                            bold: True
                            theme_text_color: "Primary"
                            size_hint_y: None
                            height: self.texture_size[1]

                    # Horizontal layout with scrolling for dosage controls
                    ScrollView:
                        do_scroll_x: True
                        do_scroll_y: False
                        size_hint_y: None
                        height: "50dp"
                        
                        MDBoxLayout:
                            orientation: "horizontal"
                            size_hint_x: None
                            width: self.minimum_width
                            height: self.minimum_height
                            spacing: "8dp"
                            padding: "4dp"

                            MDLabel:
                                text: "Take"
                                font_size: "16sp"
                                theme_text_color: "Primary"
                                size_hint_x: None
                                width: "40dp"

                            MDButton:
                                id: dosage_dropdown
                                style: "tonal"
                                radius: [20]
                                size_hint_x: None
                                width: "50dp"
                                on_release: root.open_dosage_dropdown(self)

                                MDButtonText:
                                    id: dosage_label
                                    text: "1"

                            MDLabel:
                                text: "every"
                                font_size: "16sp"
                                theme_text_color: "Primary"
                                size_hint_x: None
                                width: "50dp"

                            MDButton:
                                id: dosage_occurrence_dropdown
                                style: "tonal"
                                radius: [20]
                                size_hint_x: None
                                width: "50dp"
                                on_release: root.open_dosage_occurrence_dropdown(self)

                                MDButtonText:
                                    id: dosage_occurrence_label
                                    text: "1"

                            MDButton:
                                id: dosage_unit_dropdown
                                style: "tonal"
                                radius: [20]
                                size_hint_x: None
                                width: "80dp"
                                on_release: root.open_dosage_unit_dropdown(self)

                                MDButtonText:
                                    id: dosage_unit_label
                                    text: "hour"

                # 🌟 Supply Section
                MDBoxLayout:
                    orientation: "vertical"
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: "4dp"
                    padding: "8dp", "4dp"

                    MDBoxLayout: 
                        orientation: "horizontal" 
                        size_hint_y: None 
                        height: "50dp"  # Adjust as needed 
                        spacing: "6dp" 
                        padding: "4dp", "4dp", "4dp", "10dp" 
    
                        # Info icon + label 
                        MDIconButton: 
                            icon: "information-outline" 
                            theme_icon_color: "Secondary" 
                            size_hint: None, None 
                            size: "24dp", "24dp" 
                            on_release: app.show_tooltip("Supply", "Total number of days the prescription will last. Choose a standard amount.") 

                        MDLabel:
                            text: "Supply"
                            font_size: "18sp"
                            bold: True
                            theme_text_color: "Primary"
                            size_hint_y: None
                            height: self.texture_size[1]

                    # Scrollable container for supply buttons
                    ScrollView:
                        do_scroll_x: True
                        do_scroll_y: False
                        size_hint_y: None
                        height: "50dp"

                        MDBoxLayout:
                            id: supply_button_container
                            orientation: "horizontal"
                            spacing: "8dp"
                            size_hint_x: None
                            width: self.minimum_width
                            height: self.minimum_height

                            MDButton:
                                style: "tonal"
                                theme_text_color: "Custom"
                                text_color: 0, 0, 0, 1
                                size_hint: None, None
                                width: "80dp"
                                height: "40dp"
                                radius: [20]
                                on_release: root.select_supply_button(self)

                                MDButtonText:
                                    text: "30-Days"

                            MDButton:
                                style: "tonal"
                                theme_text_color: "Custom"
                                text_color: 0, 0, 0, 1
                                size_hint: None, None
                                width: "80dp"
                                height: "40dp"
                                radius: [20]
                                on_release: root.select_supply_button(self)

                                MDButtonText:
                                    text: "60-Days"

                            MDButton:
                                style: "tonal"
                                theme_text_color: "Custom"
                                text_color: 0, 0, 0, 1
                                size_hint: None, None
                                width: "80dp"
                                height: "40dp"
                                radius: [20]
                                on_release: root.select_supply_button(self)

                                MDButtonText:
                                    text: "90-Days"

                            MDButton:
                                style: "tonal"
                                theme_text_color: "Custom"
                                text_color: 0, 0, 0, 1
                                size_hint: None, None
                                width: "80dp"
                                height: "40dp"
                                radius: [20]
                                on_release: root.select_supply_button(self)

                                MDButtonText:
                                    text: "100-Days"
                    
                # ⏰ Start Date Section
                MDBoxLayout:
                    orientation: "vertical"
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: "4dp"
                    padding: "8dp", "4dp"
                    
                    # Date label with icon
                    MDBoxLayout:
                        orientation: "horizontal"
                        size_hint_y: None
                        height: "30dp"
                        spacing: "6dp"
                        
                        MDIconButton:
                            icon: "calendar"
                            theme_icon_color: "Secondary"
                            size_hint_x: None
                            width: "20dp"
                            
                        MDLabel:
                            text: "Start Date"
                            font_size: "18sp"
                            bold: True
                            theme_text_color: "Primary"
                            size_hint_y: None
                            height: self.texture_size[1]

                    # Scrollable date controls
                    ScrollView:
                        do_scroll_x: True
                        do_scroll_y: False
                        size_hint_y: None
                        height: "50dp"
                        
                        MDBoxLayout:
                            orientation: "horizontal"
                            size_hint_x: None
                            width: self.minimum_width
                            height: self.minimum_height
                            spacing: "4dp"

                            MDButton:
                                id: start_day_dropdown
                                style: "tonal"
                                radius: [20]
                                size_hint_x: None
                                width: "70dp"
                                on_release: app.open_day_menu(self)

                                MDButtonText:
                                    id: day_label
                                    text: "Day"

                            MDLabel:
                                text: "/"
                                bold: True
                                theme_text_color: "Primary"
                                size_hint_x: None
                                width: "10dp"
                                halign: "center"

                            MDButton:
                                id: start_month_dropdown
                                style: "tonal"
                                radius: [20]
                                size_hint_x: None
                                width: "100dp"
                                on_release: app.open_month_menu(self)

                                MDButtonText:
                                    id: month_label
                                    text: "Month"

                            MDLabel:
                                text: "/"
                                bold: True
                                theme_text_color: "Primary"
                                size_hint_x: None
                                width: "10dp"
                                halign: "center"

                            MDButton:
                                id: start_year_dropdown
                                style: "tonal"
                                radius: [20]
                                size_hint_x: None
                                width: "70dp"
                                on_release: app.open_year_menu(self)

                                MDButtonText:
                                    id: year_label
                                    text: "Year"

                # ⏰ Start Time Section
                MDBoxLayout:
                    orientation: "vertical"
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: "4dp"
                    padding: "8dp", "4dp"
                    
                    # Time label with icon
                    MDBoxLayout:
                        orientation: "horizontal"
                        size_hint_y: None
                        height: "30dp"
                        spacing: "6dp"
                        
                        MDIconButton:
                            icon: "clock"
                            theme_icon_color: "Secondary"
                            size_hint_x: None
                            width: "20dp"
                            
                        MDLabel:
                            text: "Start Time"
                            font_size: "18sp"
                            bold: True
                            theme_text_color: "Primary"
                            size_hint_y: None
                            height: self.texture_size[1]

                    # Scrollable time controls
                    ScrollView:
                        do_scroll_x: True
                        do_scroll_y: False
                        size_hint_y: None
                        height: "50dp"
                        
                        MDBoxLayout:
                            orientation: "horizontal"
                            size_hint_x: None
                            width: self.minimum_width
                            height: self.minimum_height
                            spacing: "4dp"

                            MDButton:
                                id: hour_dropdown
                                style: "tonal"
                                radius: [20]
                                size_hint_x: None
                                width: "70dp"
                                on_release: app.open_hour_menu(self)

                                MDButtonText:
                                    id: hour_label
                                    text: "HOUR"

                            MDLabel:
                                text: ":"
                                bold: True
                                size_hint_x: None
                                width: "10dp"
                                halign: "center"

                            MDButton:
                                id: minute_dropdown
                                style: "tonal"
                                radius: [20]
                                size_hint_x: None
                                width: "80dp"
                                on_release: app.open_minute_menu(self)

                                MDButtonText:
                                    id: minute_label
                                    text: "MINUTE"

                            MDButton:
                                id: ampm_dropdown
                                style: "tonal"
                                radius: [20]
                                size_hint_x: None
                                width: "70dp"
                                on_release: app.open_ampm_menu(self)

                                MDButtonText:
                                    id: ampm_label
                                    text: "AM/PM"

                MDDivider:
                    height: "1dp"
                    size_hint_x: 1
                    md_bg_color: 0.8, 0.8, 0.8, 1

                # Reminders Section
                MDBoxLayout:
                    orientation: "vertical"
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: "4dp"
                    padding: "8dp", "4dp"

                    MDLabel:
                        text: "Reminders"
                        bold: True
                        font_size: "18sp"
                        theme_text_color: "Primary"
                        size_hint_y: None
                        height: self.texture_size[1]

                    # First Row - Reminder Time Before Start Date
                    ScrollView:
                        do_scroll_x: True
                        do_scroll_y: False
                        size_hint_y: None
                        height: "50dp"
                        
                        MDBoxLayout:
                            orientation: "horizontal"
                            size_hint_x: None
                            width: self.minimum_width
                            height: self.minimum_height
                            spacing: "8dp"

                            MDButton:
                                id: reminder_prior_num_dropdown
                                style: "tonal"
                                radius: [20]
                                size_hint_x: None
                                width: "50dp"
                                on_release: root.open_reminder_prior_num_dropdown(self)

                                MDButtonText:
                                    id: reminder_prior_label
                                    text: "1"

                            MDButton:
                                id: reminder_prior_unit
                                style: "tonal"
                                radius: [20]
                                size_hint_x: None
                                width: "80dp"
                                on_release: root.open_reminder_unit_menu(self)

                                MDButtonText:
                                    id: reminder_prior_unit_label
                                    text: "WEEK"

                            MDLabel:
                                text: "prior to last day"
                                font_size: "16sp"
                                theme_text_color: "Primary"
                                size_hint_x: None
                                width: "120dp"

                    # Second Row - Repeat Reminders
                    MDLabel:
                        text: "Repeat Reminder(s)"
                        font_size: "16sp"
                        bold: True
                        theme_text_color: "Primary"
                        size_hint_y: None
                        height: "30dp"

                    ScrollView:
                        do_scroll_x: True
                        do_scroll_y: False
                        size_hint_y: None
                        height: "50dp"
                        
                        MDBoxLayout:
                            orientation: "horizontal"
                            spacing: "8dp"
                            size_hint_x: None
                            width: self.minimum_width
                            height: self.minimum_height

                            MDButton:
                                id: repeat_dropdown
                                style: "tonal"
                                radius: [20]
                                size_hint_x: None
                                width: "50dp"
                                on_release: root.open_repeat_dropdown(self)

                                MDButtonText:
                                    id: repeat_label
                                    text: "1"

                            MDLabel:
                                text: "every"
                                font_size: "16sp"
                                theme_text_color: "Primary"
                                size_hint_x: None
                                width: "45dp"
                                halign: "center"

                            MDButton:
                                id: repeat2_dropdown
                                style: "tonal"
                                radius: [20]
                                size_hint_x: None
                                width: "50dp"
                                on_release: root.open_repeat2_dropdown(self)

                                MDButtonText:
                                    id: repeat2_label
                                    text: "1"

                            MDButton:
                                id: repeat_every_unit
                                style: "tonal"
                                size_hint_x: None
                                width: "80dp"
                                halign: "center"
                                on_release: root.open_repeat_unit_menu()

                                MDButtonText:
                                    id: repeat_every_unit_label
                                    text: "DAY"                          

                MDDivider:
                    height: "1dp"
                    size_hint_x: 1
                    md_bg_color: 0.8, 0.8, 0.8, 1

                # 💊 Medication Details
                MDBoxLayout:
                    orientation: "vertical"
                    size_hint_y: None
                    height: self.minimum_height
                    padding: "8dp", "4dp"
                    spacing: "4dp"

                    MDLabel:
                        text: "Medication Details (Optional)"
                        bold: True
                        font_size: "18sp"
                        theme_text_color: "Primary"
                        halign: "left"
                        size_hint_y: None
                        height: self.texture_size[1]

                    MDTextField:
                        id: medication_box
                        multiline: True
                        hint_text: "Describe how/when to take it, warnings, or special notes"
                        mode: "outlined"
                        size_hint_y: None
                        height: "80dp"
                        on_text: app.update_char_count(self.text, "edit_prescription")

                    MDLabel:
                        id: char_count_label
                        text: "Character Count: 0/200"
                        halign: "right"
                        theme_text_color: "Secondary"
                        font_size: "14sp"
                        size_hint_y: None
                        height: "20dp"

                # ➕ 🚫 ADD & CANCEL Button Section
                MDBoxLayout:
                    orientation: "horizontal"
                    size_hint_y: None
                    height: "60dp"
                    spacing: "16dp"
                    padding: "8dp", "8dp"
                    pos_hint: {"center_x":  0.5}
                    size_hint_x: None
                    width: self.minimum_width  # 🧠 Only take up as much width as needed

                    MDButton:
                        style: "tonal"
                        md_bg_color: 0.8, 0.2, 0.2, 1
                        size_hint: None, None
                        width: "130dp"
                        height: "50dp"
                        on_release: root.manager.current = "prescription"

                        MDButtonIcon:
                            icon: "close"
                        MDButtonText:
                            text: "Cancel"

                    MDButton:
                        style: "tonal"
                        md_bg_color: 0.2, 0.6, 1, 1
                        size_hint: None, None
                        width: "130dp"
                        height: "50dp"
                        on_release: root.edit_prescription()

                        MDButtonIcon:
                            icon: "check"
                        MDButtonText:
                            text: "Save"